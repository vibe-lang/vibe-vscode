{
  "comments": {
    "lineComment": "#"
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "'", "close": "'", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(def|if|elsif|else|unless|until|while|for|case|when|struct|class|enum|try|catch|finally)\\b.*$",
    "decreaseIndentPattern": "^\\s*(end|else|elsif|catch|finally|when)\\b"
  },
  "folding": {
    "markers": {
      "start": "^\\s*(def|if|unless|until|while|for|case|struct|class|enum|try)\\b",
      "end": "^\\s*end\\b"
    }
  },
  "onEnterRules": [
    {
      "beforeText": "^\\s*(def|if|elsif|else|unless|until|while|for|case|when|struct|class|enum|try|catch|finally)\\b.*$",
      "action": { "indent": "indent" }
    }
  ],
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)"
}
