{
  "name": "vibe-language",
  "displayName": "Vibe Language",
  "description": "Syntax highlighting, snippets, and IntelliSense for the Vibe programming language",
  "version": "0.1.0",
  "publisher": "vibe-lang",
  "license": "MIT",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/vibe-lang/vibe-vscode"
  },
  "bugs": {
    "url": "https://github.com/vibe-lang/vibe-vscode/issues"
  },
  "homepage": "https://github.com/vibe-lang/vibe",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "vibe",
    "vibelang",
    "programming language",
    "syntax highlighting"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:vibe"
  ],
  "contributes": {
    "languages": [
      {
        "id": "vibe",
        "aliases": [
          "Vibe",
          "vibe"
        ],
        "extensions": [
          ".vb"
        ],
        "firstLine": "^#!.*\\bvibe\\b",
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/vibe-file-icon.svg",
          "dark": "./images/vibe-file-icon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "vibe",
        "scopeName": "source.vibe",
        "path": "./syntaxes/vibe.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "vibe",
        "path": "./snippets/vibe.snippets.json"
      }
    ],
    "iconThemes": [
      {
        "id": "vibe-icons",
        "label": "Vibe File Icons",
        "path": "./icons/vibe-icon-theme.json"
      }
    ],
    "commands": [
      {
        "command": "vibe.run",
        "title": "Vibe: Run Current File",
        "icon": "$(play)"
      }
    ],
    "keybindings": [
      {
        "command": "vibe.run",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorLangId == vibe"
      }
    ],
    "menus": {
      "editor/title/run": [
        {
          "command": "vibe.run",
          "when": "editorLangId == vibe",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Vibe",
      "properties": {
        "vibe.executablePath": {
          "type": "string",
          "default": "vibe",
          "description": "Path to the vibe interpreter executable"
        },
        "vibe.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time error diagnostics on save (fallback mode only)"
        },
        "vibe.lspPath": {
          "type": "string",
          "default": "vibe-lsp",
          "description": "Path to the vibe-lsp language server binary"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "@vscode/vsce": "^3.0.0"
  }
}
